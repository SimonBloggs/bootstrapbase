<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="system" method="upgrade">
	<name>plg_system_jless</name>
	<author>KnowledgeARC</author>
	<creationDate>2013-10-14</creationDate>
	<copyright>Copyright (C) 2013 KnowledgeARC Ltd. All rights reserved.</copyright>
	<license>GNU General Public License v3</license>
	<authorEmail>development@knowledgearc.com</authorEmail>
	<authorUrl>www.knowledgearc.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_SYSTEM_JLESS_XML_DESC</description>
	<files>
		<file plugin="jless">jless.php</file>
		<folder>compilers</folder>
    	<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_jless.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_jless.sys.ini</language>
	</languages>
	<media destination="plg_system_jless" folder="media">
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="templates"
					type="sql"
					label="PLG_SYSTEM_JLESS_TEMPLATES_LABEL"
                    description="PLG_SYSTEM_JLESS_TEMPLATES_DESC"
					query="SELECT `template` FROM `#__template_styles` WHERE `client_id` = 0 GROUP BY `template`"
					key_field="template"
					value_field="template"
                    multiple="true"/>

				<field
					name="compile"
					type="list"
					label="PLG_SYSTEM_JLESS_COMPILE_LABEL"
                    description="PLG_SYSTEM_JLESS_COMPILE_DESC"
					default="gpeasy">
					<option value="gpeasy">PLG_SYSTEM_JLESS_COMPILE_GPEASY</option>
					<option value="less.js">PLG_SYSTEM_JLESS_COMPILE_LESSJS</option>
				</field>

				<field
					name="force"
					type="list"
					label="PLG_SYSTEM_JLESS_FORCE_LABEL"
                    description="PLG_SYSTEM_JLESS_FORCE_DESC"
					default="0">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="generate_uncompressed"
					type="list"
					label="PLG_SYSTEM_JLESS_GENERATE_UNCOMPRESSED_LABEL"
                    description="PLG_SYSTEM_JLESS_GENERATE_UNCOMPRESSED_DESC"
					default="0">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="generate_sourcemap"
					type="list"
					label="PLG_SYSTEM_JLESS_GENERATE_SOURCEMAP_LABEL"
                    description="PLG_SYSTEM_JLESS_GENERATE_SOURCEMAP_DESC"
					default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>