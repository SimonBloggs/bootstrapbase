<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="template" client="site">
	<name>bootstrapbase</name>
	<creationDate>2013-10-02</creationDate>
	<author>KnowledgeARC</author>
    <authorEmail>development@knowledgearc.com</authorEmail>
	<authorUrl>http://www.knowledgearc.com</authorUrl>
	<copyright>Copyright (C) 2013 KnowledgeARC Ltd. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<version>1.0.0</version>
	<description>TPL_BOOTSTRAPBASE_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>variables.php</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_bootstrapbase.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_bootstrapbase.sys.ini</language>
	</languages>

	<positions>
		<position>header</position>		
		<position>hero</position>
		<position>top</position>
		<position>above-content</position>
		<position>breadcrumb</position>
		<position>component</position>
		<position>below-content</position>
		<position>bottom</position>
		<position>left</position>
		<position>right</position>
		<position>footer</position>
	</positions>
	
	<config>
		<fields name="params">
			<fieldset name="TPL_BOOTSTRAPBASE_FIELDSET_BASIC">
				<field name="jquery_load" type="bool" default="1" label="TPL_BOOTSTRAPBASE_JQUERYLOAD_LABEL" description="TPL_BOOTSTRAPBASE_JQUERYLOAD_DESC">
					<option value="0">TPL_BOOTSTRAPBASE_JQUERYLOAD_CORE</option>
					<option value="1">TPL_BOOTSTRAPBASE_JQUERYLOAD_TEMPLATE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>